<!DOCTYPE html>
<html>
	<head lang="en">
		<meta charset="UTF-8">
		<title>Screen Usage</title>
		<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
		<script src="http://code.highcharts.com/highcharts.js"></script>
	</head>
	<body>
		<div>
			<p id="tv_open_times"></p>
			<p id="tv_tot_usage"></p>
		</div>
		<div id="container" style="min-width: 310px; height: 400px; margin: 0 auto"></div>
		<script type="text/javascript">
			$(function() {
			 Highcharts.setOptions({
             global: {
                timezoneOffset: -8 * 60
             }
    		 });
				$('#container').highcharts({
					chart : {
						type : 'spline'
					},
					title : {
						text : 'Sreen Usage'
					},
					xAxis : {
						type : 'datetime',
						dateTimeLabelFormats : {// don't display the dummy year
							month : '%m-%d',
							year : '%y'
						}
					},
					tooltip : {
						formatter : function() {
							return '<b>' + this.series.name + '</b><br/>' + Highcharts.dateFormat('%m-%d %H:%M:%S', this.x) + ': ' + this.y;
						}
					},

					series : [{
						name : "screen_usage",
						data : [
						<% data.forEach(function(d){ %>
    						[<%= d.get('ts') %>, <%= d.get('val') %>],
  						<% }) %>
						]
					}]
				});
			});
			var data =[
				<% data.forEach(function(d){ %>
				[<%= d.get('ts') %>, <%= d.get('val') %>],
				<% }) %>
				];
			var tot = 0;
			var times = 0;
			var last = 0;
			for (i = 0; i < data.length; i++) {
				if (data[i][1] == 1) {
					tot++;
					last = data[i][0];
				} else {
					if ((last > 0) && (data[i][0] - last < 60 * 60 * 1000)) {
						times += (data[i][0] - last);
					}
				}
			}
			$("#tv_open_times").text(tot + " times");
			$("#tv_tot_usage").text((times / 1000 / 60 / 60).toFixed(2) + " Hhours");
		</script>

	</body>
</html>
